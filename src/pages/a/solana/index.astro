interface Explorer {
    name: string;
    url: string;
    icon: string;
    description: string;
}

const explorers: Explorer[] = [
    {
        name: "Jupiter",
        url: "https://jup.ag/tokens/CTQBjyrX8pYyqbNa8vAhQfnRXfu9cUxnvrxj5PvbzTmf",
        icon: "ü™ê",
