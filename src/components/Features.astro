            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24" set:html={feature.icon} />
          </div>
          <h3 class="text-xl font-semibold text-nordic-dark mb-2">
            {feature.title}
          </h3>
          <p class="text-nordic-gray">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
