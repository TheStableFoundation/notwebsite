---
import { Image } from "astro:assets";
---

<header
    class="fixed w-full top-0 z-50 bg-nordic-paper/90 backdrop-blur-sm border-b border-gray-200"
>
    <nav class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <Image
                    src="/app-icon.png"
                    alt="app icon"
                    width={50}
                    height={50}
                /><a href="/" class="">
                    <span class="text-2xl font-bold text-nordic-text"
                        >NotWallet Crypto</span
                    >
                </a>
            </div>
            <div class="hidden md:flex items-center space-x-8">
                <a
                    href="/#features"
                    class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                    >Features</a
                >
                <a
                    href="/#about"
                    class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                    >About</a
                >
                <a
                    href="/#download"
                    class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                    >Download</a
                >
                <a
                    href="/changelog"
                    class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                    >Changelog</a
                >
                <a
                    href="/#contact"
                    class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                    >Contact</a
                >
                <a
                    href="/buy-crypto"
                    class="bg-gradient-to-r from-nordic-accent to-blue-500 text-white px-4 py-2 rounded-lg hover:opacity-90 transition-opacity font-semibold"
                    >Buy Crypto</a
                >
            </div>
            <div class="md:hidden">
                <button
                    id="mobile-menu-button"
                    class="text-nordic-text-secondary hover:text-nordic-accent"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </nav>

    <!-- Mobile menu -->
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-nordic-paper border-t border-gray-200"
    >
        <div class="container mx-auto px-6 py-4 flex flex-col space-y-4">
            <a
                href="/#features"
                class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                >Features</a
            >
            <a
                href="/#about"
                class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                >About</a
            >
            <a
                href="/#download"
                class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                >Download</a
            >
            <a
                href="/changelog"
                class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                >Changelog</a
            >
            <a
                href="/#contact"
                class="text-nordic-text-secondary hover:text-nordic-accent transition-colors"
                >Contact</a
            >
            <a
                href="/buy-crypto"
                class="bg-gradient-to-r from-nordic-accent to-blue-500 text-white px-4 py-2 rounded-lg hover:opacity-90 transition-opacity font-semibold text-center"
                >Buy Crypto</a
            >
        </div>
    </div>
</header>

<script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });

    // Close mobile menu when clicking on a link
    const mobileMenuLinks = mobileMenu?.querySelectorAll("a");
    mobileMenuLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
        });
    });
</script>
