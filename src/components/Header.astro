<header class="fixed w-full top-0 z-50 bg-white/90 backdrop-blur-sm border-b border-gray-200">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <svg class="w-8 h-8 text-nordic-accent" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5zm0 18c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6z"/>
        </svg>
        <span class="text-2xl font-bold text-nordic-dark">NotWallet</span>
      </div>
      <div class="hidden md:flex items-center space-x-8">
        <a href="#features" class="text-nordic-gray hover:text-nordic-accent transition-colors">Features</a>
        <a href="#about" class="text-nordic-gray hover:text-nordic-accent transition-colors">About</a>
        <a href="#download" class="text-nordic-gray hover:text-nordic-accent transition-colors">Download</a>
        <a href="#contact" class="text-nordic-gray hover:text-nordic-accent transition-colors">Contact</a>
      </div>
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-nordic-gray hover:text-nordic-accent">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <div class="container mx-auto px-6 py-4 flex flex-col space-y-4">
      <a href="#features" class="text-nordic-gray hover:text-nordic-accent transition-colors">Features</a>
      <a href="#about" class="text-nordic-gray hover:text-nordic-accent transition-colors">About</a>
      <a href="#download" class="text-nordic-gray hover:text-nordic-accent transition-colors">Download</a>
      <a href="#contact" class="text-nordic-gray hover:text-nordic-accent transition-colors">Contact</a>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking on a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
