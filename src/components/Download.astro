---
interface PlatformDownload {
  platform: string
  arch?: string
  filename: string
  size: number
  downloadUrl: string
}

interface DownloadsData {
  version: string
  published_at: string
  downloads: {
    macos: PlatformDownload[]
    windows: PlatformDownload[]
    linux: PlatformDownload[]
  }
}

let downloadsData: DownloadsData | null = null
let error: string | null = null

try {
  const response = await fetch(`${Astro.url.origin}/api/download-desktop-app`)
  if (response.ok) {
    downloadsData = await response.json()
  } else {
    error = 'Failed to load desktop downloads'
  }
} catch (e) {
  error = 'Failed to load desktop downloads'
  console.error('Download fetch error:', e)
}

const formatFileSize = (bytes: number): string => {
  if (bytes === 0) return '0 Bytes'
  const k = 1024
  const sizes = ['Bytes', 'KB', 'MB', 'GB']
  const i = Math.floor(Math.log(bytes) / Math.log(k))
  return Math.round((bytes / Math.pow(k, i)) * 100) / 100 + ' ' + sizes[i]
}

const getPlatformIcon = (platform: string) => {
  switch (platform) {
    case 'macos':
      return 'üçé'
    case 'windows':
      return 'ü™ü'
    case 'linux':
      return 'üêß'
    default:
      return 'üíª'
  }
}
